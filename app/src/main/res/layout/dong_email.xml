<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:background="@drawable/avatar_background"
        android:layout_width="60dp"
        android:text="T"
        android:id="@+id/round"
        android:textSize="38sp"
        android:gravity="center"
        android:layout_height="60dp"/>
    <TextView
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="adasdasd"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/round"
        android:textSize="18sp"
        android:textStyle="bold"
        android:id="@+id/name"/>
    <TextView
        android:id="@+id/time"
        android:layout_toRightOf="@id/name"
        android:layout_marginRight="26dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:35 AM"/>

    <TextView
        android:id="@+id/noidung"
        android:layout_width="231dp"
        android:layout_height="41dp"
        android:layout_below="@+id/name"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="89dp"
        android:layout_toEndOf="@+id/round"
        android:layout_toRightOf="@id/round"
        android:text="dfasdfdasfdasfsda"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/star"
        android:layout_width="37dp"
        android:layout_height="41dp"
        android:layout_below="@+id/time"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-51dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="20dp"
        android:layout_toRightOf="@+id/noidung"
        android:src="@drawable/ic_star0" />


</RelativeLayout>